{
  "name": "@elastic/search-application-client",
  "version": "1.0.0",
  "description": "A Search Application Client for Elasticsearch",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --ignore-unknown --ignore-path .gitignore .",
    "format:write": "yarn format --write",
    "lint": "eslint --ext *.ts,*.tsx,*.js,*.jsx --ignore-pattern '**/node_modules/**' --ignore-pattern '**/dist/**' --ignore-pattern '**/build/**'",
    "typecheck": "tsc --noEmit",
    "test:ci": "jest --runInBand",
    "test": "jest",
    "build": "tsup --minify",
    "watch": "tsup --watch",
    "prepare": "husky install",
    "prepublish": "yarn typecheck && yarn lint && yarn test && yarn build",
    "changeset": "changeset",
    "publish": "changeset version && changeset publish",
    "publish::local": "yarn build && cd examples/sandbox && rm -rf node_modules/@elastic/search-app-client && yarn add file:../../"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lint",
    "*.{ts,tsx}": "yarn typecheck",
    "**/*": "yarn format"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "@elastic/elasticsearch": "^8.8.0",
    "cross-fetch": "^3.1.6",
    "nock": "^13.3.1"
  }
}
