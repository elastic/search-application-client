{
  "ignorePatterns": ["dist/", "node_modules/"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "jest"],
  "overrides": [
    {
      "files": ["./bin/*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      },
      "env": {
        "node": true
      }
    }
  ],
  "env": {
    "browser": true,
    "jest": true
  }
}
